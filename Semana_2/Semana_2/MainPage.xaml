<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana_2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Calculadora de Notas UIsrael" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
        </Frame>


        <Entry x:Name="txtUser" Placeholder="Ingrese el usuario" Margin="10,20,10,0"/>
        <Entry x:Name="txtPassword" Placeholder="Ingrese contraseña" IsPassword="True" Margin="10,0,10,40"/>
        
        <Button x:Name="btnAbrir" Text="Calcular Notas" Clicked="btnAbrir_Clicked"/>

    </StackLayout>

</ContentPage>
